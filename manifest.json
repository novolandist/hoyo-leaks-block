{
  "manifest_version": 3,
  "name": "__MSG_name__",
  "version": "108.0",
  "description": "__MSG_description__",
  "default_locale": "zh_CN",
  "permissions": [
    "storage"
  ],
  "host_permissions": [
    "*://*.bilibili.com/*",
    "*://*.youtube.com/*",
    "*://*.twitter.com/*",
    "*://*.x.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "*://*.bilibili.com/*"
      ],
      "js": [
        "core/common.js",
        "shared/base-config-manager.js",
        "shared/utils.js",
        "core/utils.js",
        "core/config-manager.js",
        "core/content-blocker.js",
        "core/ui-manager.js",
        "core/block-core.js",
        "content-scripts/bilibili.js"
      ],
      "css": [
        "styles/block-styles.css"
      ],
      "run_at": "document_start"
    },
    {
      "matches": [
        "*://*.youtube.com/*"
      ],
      "js": [
        "core/common.js",
        "shared/base-config-manager.js",
        "shared/utils.js",
        "core/utils.js",
        "core/config-manager.js",
        "core/content-blocker.js",
        "core/ui-manager.js",
        "core/block-core.js",
        "content-scripts/youtube.js"
      ],
      "css": [
        "styles/block-styles.css"
      ],
      "run_at": "document_start"
    },
    {
      "matches": [
        "*://*.twitter.com/*",
        "*://*.x.com/*"
      ],
      "js": [
        "core/common.js",
        "shared/base-config-manager.js",
        "shared/utils.js",
        "core/utils.js",
        "core/config-manager.js",
        "core/content-blocker.js",
        "core/ui-manager.js",
        "core/block-core.js",
        "content-scripts/twitter.js"
      ],
      "css": [
        "styles/block-styles.css"
      ],
      "run_at": "document_start"
    }
  ],
  "action": {
    "default_popup": "popup/popup.html",
    "default_title": "__MSG_name__"
  },
  "options_page": "options/options.html",
  "web_accessible_resources": [
    {
      "resources": [
        "config/arealist.json",
        "config/default-v1.json"
      ],
      "matches": [
        "<all_urls>"
      ]
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png",
    "512": "icons/icon512.png"
  }
}
